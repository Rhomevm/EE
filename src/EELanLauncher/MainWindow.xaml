<Window x:Class="EELanLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Empire Earth LAN Launcher" Height="420" Width="700">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="Empire Earth LAN Launcher" FontSize="22" FontWeight="Bold"/>
            <TextBlock Text="Stable multiplayer over WiFi using ZeroTier LAN" FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <GroupBox Header="ZeroTier" Padding="8" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock x:Name="ZtStatusText" Text="" TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button x:Name="InstallZtButton" Content="Install ZeroTier" Click="InstallZtButton_Click" Visibility="Collapsed" Margin="0,0,8,0"/>
                            <Button x:Name="RecheckZtButton" Content="Recheck" Click="RecheckZtButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Network" Padding="8" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock x:Name="LanStatusText" Text="" TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button x:Name="CopyIpButton" Content="Copy IP" Click="CopyIpButton_Click" IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Game" Padding="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock VerticalAlignment="Center">Game Path:</TextBlock>
                            <TextBox x:Name="GamePathText" Margin="8,0,0,0" Width="420" IsReadOnly="True"/>
                            <Button Content="Locate" Click="LocateGameButton_Click" Margin="8,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <CheckBox x:Name="EnableDdrawCheck" Content="Enable DDrawCompat" IsChecked="True"/>
                            <Button Content="Manage DDraw" Click="ManageDdrawButton_Click" Margin="8,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button x:Name="PlayButton" Content="PLAY (LAN OVER ZEROTIER)" FontWeight="Bold" FontSize="14" Padding="12" Click="PlayButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <GroupBox Header="Settings" Padding="8" Margin="0,0,0,8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center">ZeroTier Network ID:</TextBlock>
                            <TextBox x:Name="NetworkIdText" Margin="8,0,0,0" Width="200"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Save Settings" Click="SaveSettingsButton_Click"/>
                            <Button Content="Open Logs Folder" Click="OpenLogsButton_Click" Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="File Info" Padding="8">
                    <StackPanel>
                        <TextBlock Text="SHA-256:"/>
                        <TextBlock x:Name="ShaText" Text="" TextWrapping="Wrap"/>
                        <Button Content="Copy Hash" Click="CopyHashButton_Click" Margin="0,8,0,0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="2" Text="Tip: Always use LAN in-game. Do NOT use Internet or Direct IP." Foreground="DarkRed" HorizontalAlignment="Center"/>
    </Grid>
</Window>